<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/feed_content_arrow"
        android:orientation="vertical">

        <TextView
            android:id="@+id/feed_content_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="title"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/feed_content_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/feed_content_title"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/feed_content_title"
            android:layout_marginTop="5dp"
            android:padding="2dp"
            android:text="date"
            android:textColor="#7F7F7F"
            android:textSize="12sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/feed_content_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:contentDescription="@string/app_name"
        android:src="@android:drawable/ic_media_play" />

</RelativeLayout>