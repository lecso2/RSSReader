<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/rss_edit_dialog_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.facebook.share.widget.ShareButton
        android:id="@+id/rss_edit_dialog_share_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/share"
        android:layout_alignBaseline="@+id/rss_edit_dialog_cancel"
        android:layout_alignBottom="@+id/rss_edit_dialog_cancel"
        android:layout_toStartOf="@+id/rss_edit_dialog_cancel"
        android:layout_marginEnd="15dp" />

    <com.petercsik.interview.rssreader.uiElements.AlertDialogEditText
        android:id="@+id/rss_edit_dialog_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:imeOptions="actionDone"
        android:maxLines="1"
        android:inputType="textPersonName"
        android:layout_below="@+id/rss_edit_dialog_textView"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/rss_edit_dialog_modify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modify"
        android:layout_below="@+id/rss_edit_dialog_editText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="19dp" />

    <Button
        android:id="@+id/rss_edit_dialog_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_marginEnd="15dp"
        android:layout_alignBaseline="@+id/rss_edit_dialog_modify"
        android:layout_alignBottom="@+id/rss_edit_dialog_modify"
        android:layout_toStartOf="@+id/rss_edit_dialog_modify" />

    <Button
        android:id="@+id/rss_edit_dialog_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:layout_alignBaseline="@+id/rss_edit_dialog_share_btn"
        android:layout_alignBottom="@+id/rss_edit_dialog_share_btn"
        android:layout_alignParentStart="true" />

</RelativeLayout>